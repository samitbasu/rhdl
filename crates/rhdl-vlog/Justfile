# Run coverage analysis on compilation tests and open results in browser
coverage:
    #!/usr/bin/env bash
    set -euo pipefail
    
    # Run coverage specifically on compilation tests
    echo "Running coverage analysis on compilation tests..."
    cargo llvm-cov clean
    cargo llvm-cov --html --output-dir target/coverage test 

    # Open the coverage report in the default web browser (macOS)
    echo "Opening coverage report in browser..."
    open target/coverage/html/index.html
